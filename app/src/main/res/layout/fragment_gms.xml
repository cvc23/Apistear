<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/endeavour"
        >


        <ImageButton
            android:id="@+id/imageGame"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textViewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="40dp"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/imageGame"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/buttonHTP"
            android:background="@drawable/player_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewGame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:text="How To Play" />
    </RelativeLayout>
</FrameLayout>